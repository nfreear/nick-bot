{
  "#": "NLP.js chat-bot configuration.",

  "pathPlugins": "./plugins",
  "settings": {
    "nlp": {
      "corpora": [
        "./corpus-en.json",
        "./corpus-zh.json"
      ]
    },
    "ner": {
      "threshold": 0.8,
      "rules": {
        "en": {
          "placeName": {
            "name": "placeName",
            "type": "trim",
            "rules": [ {
                "type": "after",
                "words": [ "in", "for" ],
                "options": {}
              }
            ]
          }
        }
      }
    },
    "console": {
      "debug": true
    },
    "api-server": {
      "port": 3000,
      "serveBot": false,

      "middleware": [
        "demoMiddleware"
      ]
    }
  },
  "use": ["Basic", "LangZh", "ConsoleConnector", "ExpressApiServer", "DirectlineConnector"]
}
